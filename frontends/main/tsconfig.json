{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "ol-components/*": ["../ol-components/src/components/*"],
      "ol-components/constants/*": ["../ol-components/src/constants/*"],
      "ol-components/types/*": ["../ol-components/src/types/*"],
    },
    "target": "ESNext",
    "types": [
      "node",
      "jest",
      "@types/jest",
      "@testing-library/jest-dom",
      "jest-extended",
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../jest.jsdom.config",
  ],
  "exclude": ["node_modules"]
}
